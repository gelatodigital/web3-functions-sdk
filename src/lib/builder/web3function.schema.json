{
  "title": "Web3 Function Schema",
  "description": "Web3 Function Schema",
  "type": "object",
  "properties": {
    "web3FunctionVersion": {
      "enum": ["2.0.0"]
    },
    "runtime": {
      "enum": ["js-1.0"]
    },
    "memory": {
      "enum": [128, 256, 512]
    },
    "timeout": {
      "type": "number",
      "minimum": 5,
      "maximum": 300
    },
    "executionMode": {
      "enum": ["sequential", "parallel"]
    },
    "eventRetryInterval": {
      "type": "number",
      "minimum": 60,
      "maximum": 60
    },
    "eventRetryTtl": {
      "type": "number",
      "minimum": 0,
      "maximum": 259200
    },
    "userArgs": {
      "type": "object",
      "patternProperties": {
        "^[\\w\\-]+$": {
          "enum": [
            "string",
            "number",
            "boolean",
            "string[]",
            "number[]",
            "boolean[]"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "web3FunctionVersion",
    "runtime",
    "memory",
    "timeout",
    "userArgs"
  ]
}
